<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Struts 1 Demo</display-name>
	
	<error-page>
	    <error-code>404</error-code>
	    <location>/WEB-INF/jsp/error/404.jsp</location>
	</error-page>
	
	<error-page>
	    <error-code>403</error-code>
	    <location>/WEB-INF/jsp/error/403.jsp</location>
	</error-page>
	
	<error-page>
	    <error-code>500</error-code>
	    <location>/WEB-INF/jsp/error/500.jsp</location>
	</error-page>
		
		
	<filter>
	    <filter-name>AuthFilter</filter-name>
	    <filter-class>com.demo.security.AuthFilter</filter-class>
	    <init-param>
	        <param-name>loginPage</param-name>
	        <param-value>/auth/login.do</param-value>
	    </init-param>
	    <init-param>
	        <param-name>adminOnlyPrefix</param-name>
	        <param-value>/admin</param-value>
	    </init-param>
	    <init-param>
	        <param-name>atmPrefix</param-name>
	        <param-value>/atm</param-value>
	    </init-param>
	</filter>
	
	<filter-mapping>
	    <filter-name>AuthFilter</filter-name>
	    <url-pattern>*.do</url-pattern>
	</filter-mapping>

   <servlet>
   
	<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
	<init-param>
		<param-name>config</param-name>
		<param-value>/WEB-INF/struts-config.xml</param-value>
	</init-param>
	

	<load-on-startup>2</load-on-startup>
	</servlet>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
	    

    

    <welcome-file-list>
        <welcome-file>test.do</welcome-file>
    </welcome-file-list> 
</web-app>

